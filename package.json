{
  "name": "task-api-assessment",
  "version": "1.0.0",
  "description": "A RESTful API for a simple task management system with JWT authentication, pg-mem in-memory database, and comprehensive testing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathIgnorePatterns=integration-tests",
    "test:unit:watch": "jest --watch --testPathIgnorePatterns=integration-tests",
    "test:unit:coverage": "jest --coverage --testPathIgnorePatterns=integration-tests",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:all:coverage": "npm run test:unit:coverage && npm run test:integration:coverage",
    "db:init": "node utils/initDatabase.js",
    "db:check": "node utils/initDatabase.js check",
    "auth:test": "node -e \"const auth = require('./middleware/auth'); console.log('âœ… Auth middleware loaded successfully');\""
  },
  "keywords": [
    "task-management",
    "api",
    "express",
    "pg-mem",
    "in-memory-database",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg-mem": "^2.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "shadcn": "^3.3.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
